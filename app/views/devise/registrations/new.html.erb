<section id="content" class="m-t-lg wrapper-md animated fadeInUp">    
    <div class="container aside-xl">
        <header class="wrapper text-center">
            <strong>This is a demo platform.<br>No real booking available.</strong>
        </header>
        <%= form_for(resource, :as => resource_name, :url => registration_path(resource_name)) do |f| %>
            <div class="list-group">
                <div class="list-group-item">
                    <%= f.text_field :name, :class => "form-control no-border", :placeholder => "Name" %>
                </div>
                <div class="list-group-item">
                    <%= f.text_field :email, :class => "form-control no-border", :placeholder => "Email" %>              
                </div>
                <div class="list-group-item">
                    <%= f.text_field :mobile, :class => "form-control no-border", :placeholder => "Mobile phone" %>
                </div>
                <div class="list-group-item">
                    <%= f.password_field :password, :class => "form-control no-border", :placeholder => "Password" %>              
                </div>
                </div>
                <div class="checkbox m-b">
                <label>
                    <input type="checkbox"> Agree the <a href="#">terms and policy</a>
                </label>
            </div>
            <%= f.submit "Sign up" , :class=> "btn btn-lg btn-primary btn-block" %>
            <div class="text-center m-t m-b"><a href="#"><small>Or</small></a></div>
            <%= link_to user_omniauth_authorize_path(:facebook) do %>
                <div class="btn btn-lg btn-fb btn-block"><i class="fa fa-facebook"></i> &nbsp;&nbsp;&nbsp;&nbsp;&nbsp;Connect with Facebook</div>
            <%end %>
            <div class="line line-dashed"></div>
            <p class="text-muted text-center"><small>Already have an account?</small></p>
            <%= link_to "Sign in", new_session_path(resource_name),:class => "btn btn-lg btn-default btn-block" %>
        <% end %>
    </div>
</section>