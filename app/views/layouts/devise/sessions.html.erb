<!DOCTYPE html>
<html  class="app">
    <head>
        <title><%= content_for?(:title) ? yield(:title) : "Untitled" %></title>
        <meta name="description" content="sports venues, reservation, match, soccer, futbol, squash, karts, paintball, booking, dashboard" />
        <meta name="viewport" content="width=device-width, initial-scale=1, maximum-scale=1" /> 
        <%= stylesheet_link_tag "bootstrap" %>
        <%= stylesheet_link_tag "animate" %>
        <%= stylesheet_link_tag "font-awesome.min" %>
        <%= stylesheet_link_tag "icon" %>
        <%= stylesheet_link_tag "font" %>
        <%= stylesheet_link_tag "app" %>
        <%= stylesheet_link_tag "custom" %>
        <%= javascript_include_tag :defaults %>
        <%= csrf_meta_tag %>
        <%= yield(:head) %>
    </head>
    <body class="bg-primary dk intro-login" >
        <header id="header" class="navbar navbar-fixed-top bg-primary dk"  data-spy="affix" data-offset-top="1">
            <div class="container">
                <div class="navbar-header">        
                     <%= link_to root_path do %>
                        <div class="navbar-brand m-r-lg"><span class="text-lt">BookMyMatch.co</span>
                    <%end %>                    
                </div>
            </div>
        </header>
        <%= yield %>
        <footer id="footer">
            <div class="text-center padder">
                <p>
                    <small>BookMyMatch is a brand of AC Labs LLC.<br>&copy; 2014</small>
                </p>
            </div>
        </footer>
        <%= javascript_include_tag 'jquery.min' %>
        <%= javascript_include_tag 'app.plugin' %>
        <%= javascript_include_tag 'bootstrap' %>
        <%= javascript_include_tag 'app' %>
        <%= javascript_include_tag 'slimscroll/jquery.slimscroll.min' %>
        <%= yield(:javascript) -%>
    </body>    
</html>
