<section id="content" class="m-t-lg wrapper-md animated fadeInUp">    
  <div class="container aside-xl">
    <section class="m-b-lg">
      <header class="wrapper text-center">
        <strong>This is a demo platform.<br>No real booking available.</strong>
      </header>
      <%= form_for(resource, :as => resource_name, :url => session_path(resource_name)) do |f| %>
        <div class="list-group">
          <div class="list-group-item">
            <%= f.text_field :email, :class=>"form-control no-border",:placeholder=>"Email" %></p>
          </div>
          <div class="list-group-item">
            <%= f.password_field :password, :class=>"form-control no-border",:placeholder=>"Password" %></p>
          </div>
        </div>
        <button type="submit" class="btn btn-lg btn-primary btn-block">Sign in</button>
        <div class="text-center m-t m-b">
            <%- if devise_mapping.recoverable? && controller_name != 'passwords' %>
                <%= link_to "Forgot your password?", new_password_path(resource_name) %><br />
            <% end -%>
        </div>
        <div class="text-center m-t m-b"><a href="#"><small>Or</small></a></div>
        <%= link_to user_omniauth_authorize_path(:facebook) do %>
          <div class="btn btn-lg btn-fb btn-block"><i class="fa fa-facebook"></i> &nbsp;&nbsp;&nbsp;&nbsp;&nbsp;Connect with Facebook</div>
        <%end %>
        <div class="line line-dashed"></div>
        <p class="text-muted text-center"><small>Do not have an account?</small></p>
        <%- if devise_mapping.registerable? && controller_name != 'registrations' %>
            <%= link_to "Create an account", new_registration_path(resource_name), :class=> "btn btn-lg btn-default btn-block"%>
        <% end -%>
     <% end %>
    </section>
  </div>
</section>